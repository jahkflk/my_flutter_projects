{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowImportingTsExtensions": false,
    "composite": true,
    "noEmit": false, 
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist/app",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/shims-vue.d.ts",
    "env.d.ts",
    "vite.config.ts"
  ]
}





